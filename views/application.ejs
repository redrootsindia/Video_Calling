<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Video Calling App</title>

    <link rel="stylesheet" href="style.css" />
    <script src="socket.io/socket.io.js"></script>

    <!-- import font awesome here -->
    <script
      src="https://kit.fontawesome.com/812ea8c1f9.js"
      crossorigin="anonymous"
    ></script>
    <!-- import peer.js -->
    <script src="https://cdn.jsdelivr.net/npm/peerjs@1.0.2/dist/peerjs.min.js"></script>

    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header_back"><i class="fas fa-angle-left"></i></div>
        <h3>Video Calling</h2>
      </div>
    </div>  
    <div class="main">  
      <div class="videos_group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options_left">
          <div id="stopVideo" class="options_button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options_button">
            <i class="fa fa-microphone"></i>
          </div>
          <div id="disconnect" class="options_button background_red">
            <i class="fa fa-phone"></i>
          </div>
        </div>
        <div class="options_right">
          <div id="inviteButton" class="options_button">
            <i class="fas fa-user-plus"></i>
          </div>
        </div>
      </div>
    </div>

  </div>
  </body>

  <script src="script.js"></script>
</html>